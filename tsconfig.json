{
  "compilerOptions": {
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es5",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": ".build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2015"],
    "rootDir": "./"
  }
}